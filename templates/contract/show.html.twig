{% extends 'base.html.twig' %}

{% block title %}Contract{% endblock %}

{% block body %}
    <h1>Contract</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ContractId</th>
                <td>{{ contract.contractId }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ contract.startDate ? contract.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ contract.endDate ? contract.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ contract.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('contract_index') }}">back to list</a>

    <a href="{{ path('contract_edit', {'contractId': contract.contractId}) }}">edit</a>

    {{ include('contract/_delete_form.html.twig') }}
