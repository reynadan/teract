{% extends 'base.html.twig' %}

{% block title %}Contract index{% endblock %}

{% block body %}
    <h1>Contract index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ContractId</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contract in contracts %}
            <tr>
                <td>{{ contract.contractId }}</td>
                <td>{{ contract.startDate ? contract.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ contract.endDate ? contract.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ contract.status }}</td>
                <td>
                    <a href="{{ path('contract_show', {'contractId': contract.contractId}) }}">show</a>
                    <a href="{{ path('contract_edit', {'contractId': contract.contractId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contract_new') }}">Create new</a>
{% endblock %}
